<h1>Edit Wiki</h1>

<%= form_with(model: @wiki, local: true) do |form| %>

<% if @wiki.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@wiki.errors.count, "error") %> prohibited this article from being saved:
  </h2>
    <ul>
      <% @wiki.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :body %>
      <%= form.text_area :body %>
    </p>

    <p>
      <%= form.submit %>
    </p>

    <% end %>

