<!DOCTYPE html>
<html>
<head>
  <title>NewRailsProject</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <% if user_signed_in? %>
  Signed in as: <strong><%= current_user.email %></strong> |
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  <% if @user && @current_user.role == "standard" || @user && @current_user.role == "admin" %>
    <%= link_to "Upgrade to Premium", charges_path %>
    <% else %>
    <%= link_to "Downgrade to Standard", downgrade_path %>
    <% end %>
  <% else %>

  <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
  <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
  <% end %>
  <% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>"
    <%= value %>
  </div>
  <% end %>



  <%= yield %>
</body>
</html>
